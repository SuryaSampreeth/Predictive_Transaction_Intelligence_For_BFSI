# MongoDB Configuration
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
DATABASE_NAME=fraud_detection_db

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# Model Configuration
MODEL_VERSION=1.0.0
USE_MOCK_DATA=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Vercel Production Domains (keep these secure - set in Railway environment)
VERCEL_DOMAINS=https://your-app.vercel.app,https://your-preview-deployments.vercel.app
